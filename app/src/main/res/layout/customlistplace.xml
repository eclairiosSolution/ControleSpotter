<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jdhfj"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/address_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_place"
                android:layout_marginTop="10dp"
                android:text="kjj"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/radius_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/btn_delete_place"
                android:text="kjj" />

            <Button
                android:id="@+id/btn_delete_place"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_delete_24" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>