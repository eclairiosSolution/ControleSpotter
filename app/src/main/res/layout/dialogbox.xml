<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rounds"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/deletebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/camera" />

        <TextView
            android:id="@+id/textviewname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/text_view_countiing"
            android:layout_toRightOf="@+id/deletebutton"
            android:gravity="left"
            android:padding="5dp"
            android:text="assdfg"
            android:textColor="#030303"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewname"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/text_view_countiing"
            android:layout_toRightOf="@+id/deletebutton"
            android:text="birmingham - 4km" />

        <TextView
            android:id="@+id/text_view_countiing"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:maxLength="5"
            android:text="7 min"
            android:textColor="#000000"
            android:textSize="15dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yess"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_green"
            android:gravity="center"

            android:text="I see it"
            android:textAllCaps="false"
            android:textColor="#427802" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/rounded_corner_red"

            android:drawableTint="#AC0101"
            android:textAllCaps="false"
            android:text="Not there"
            android:textColor="#ec0c18" />

    </LinearLayout>




</LinearLayout>